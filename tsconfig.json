{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "**/*.astro"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
